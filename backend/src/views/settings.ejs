<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - Inbox to Week</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <!-- Header -->
    <div class="bg-white shadow">
      <div class="max-w-4xl mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold text-gray-900">Settings</h1>
        <div class="mt-4 flex gap-3">
          <a href="/plan" class="text-sm text-blue-600 hover:text-blue-800">View Plan</a>
          <a href="/review" class="text-sm text-blue-600 hover:text-blue-800">Review</a>
          <a href="/" class="text-sm text-gray-600 hover:text-gray-800">Home</a>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 py-8 space-y-6">
      <!-- Email Forwarding -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Email Forwarding Address</h2>
        <p class="text-sm text-gray-600 mb-4">
          Forward healthcare emails to this address to automatically add them to your plan:
        </p>
        <div class="flex gap-2">
          <input
            type="text"
            id="forwarding-address"
            value="<%= user.forwarding_address %>"
            readonly
            class="flex-1 px-4 py-2 border border-gray-300 rounded bg-gray-50 font-mono text-sm"
          />
          <button
            onclick="copyForwardingAddress()"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
          >
            Copy
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-3">
          üí° Tip: In Gmail, create a filter to auto-forward specific emails to this address
        </p>
      </div>

      <!-- Upload Photo -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Upload Bill Photo</h2>
        <p class="text-sm text-gray-600 mb-4">
          Upload a photo of a bill to automatically add it to your plan:
        </p>
        <form action="/upload/photo" method="POST" enctype="multipart/form-data">
          <div class="flex gap-2">
            <input
              type="file"
              name="photo"
              accept="image/*"
              required
              class="flex-1 px-4 py-2 border border-gray-300 rounded"
            />
            <button
              type="submit"
              class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
            >
              Upload
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-2">Max file size: 5MB</p>
        </form>
      </div>

      <!-- Plan Share Link -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Share Plan with Family</h2>
        <p class="text-sm text-gray-600 mb-4">
          Share this link with family members so they can view the plan:
        </p>
        <div class="flex gap-2">
          <input
            type="text"
            id="share-link"
            value="<%= planShareUrl %>"
            readonly
            class="flex-1 px-4 py-2 border border-gray-300 rounded bg-gray-50 text-sm"
          />
          <button
            onclick="copyShareLink()"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
          >
            Copy
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-3">
          ‚ö†Ô∏è Keep this link private - anyone with this link can view the plan
        </p>
      </div>

      <!-- Account Info -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Account Information</h2>
        <div class="space-y-2 text-sm">
          <p><span class="font-medium">Email:</span> <%= user.email %></p>
          <p><span class="font-medium">Care Recipient:</span> <%= recipient.display_name %></p>
        </div>
      </div>

      <!-- Delete Account -->
      <div class="bg-red-50 rounded-lg shadow p-6 border border-red-200">
        <h2 class="text-lg font-semibold text-red-900 mb-4">Delete Account</h2>
        <p class="text-sm text-red-700 mb-4">
          This will permanently delete your account and all associated data. This action cannot be undone.
        </p>
        <button
          onclick="confirmDelete()"
          class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700"
        >
          Delete Account
        </button>
      </div>
    </div>
  </div>

  <script>
    function copyForwardingAddress() {
      const input = document.getElementById('forwarding-address');
      input.select();
      document.execCommand('copy');
      alert('Forwarding address copied to clipboard!');
    }

    function copyShareLink() {
      const input = document.getElementById('share-link');
      input.select();
      document.execCommand('copy');
      alert('Share link copied to clipboard!');
    }

    function confirmDelete() {
      const confirmation = prompt('Are you sure you want to delete your account? This cannot be undone.\\n\\nType DELETE to confirm:');

      if (confirmation === 'DELETE') {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/settings/delete-account';

        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'confirm';
        input.value = 'DELETE';

        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      } else {
        alert('Account deletion cancelled.');
      }
    }
  </script>
</body>
</html>
