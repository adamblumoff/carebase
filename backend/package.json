{
  "name": "@carebase/backend",
  "version": "0.1.0",
  "description": "Backend API for Carebase healthcare coordination",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "test": "npm run test:node && npm run test:vitest",
    "test:node": "NODE_ENV=test tsx --test src/**/*.test.ts",
    "test:coverage": "NODE_ENV=test tsx --test src/**/*.test.ts && NODE_ENV=test vitest run --coverage --coverage.reports=text && node -e \"const fs=require('fs');const p='coverage';if(fs.existsSync(p))fs.rmSync(p,{recursive:true,force:true});\"",
    "test:vitest": "NODE_ENV=test vitest run",
    "docs:routes": "tsx scripts/generate-route-docs.ts"
  },
  "keywords": [
    "healthcare",
    "coordination",
    "api"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@clerk/backend": "^2.19.0",
    "@clerk/express": "^1.7.42",
    "@google-cloud/vision": "^4.0.0",
    "chrono-node": "^2.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "resend": "^3.5.0",
    "socket.io": "^4.8.1",
    "svix": "^1.79.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "c8": "^9.1.0",
    "pg-mem": "^3.0.5",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.19.4"
  }
}
