<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Review Items - Carebase</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <!-- Header -->
    <div class="bg-white shadow">
      <div class="max-w-6xl mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold text-gray-900">Review Items</h1>
        <p class="text-sm text-gray-600 mt-1">
          <%= items.length %> item<%= items.length === 1 ? '' : 's' %> need review (confidence < 70%)
        </p>
        <div class="mt-4 flex gap-3">
          <a href="/plan" class="text-sm text-blue-600 hover:text-blue-800">Plan</a>
          <a href="/settings" class="text-sm text-blue-600 hover:text-blue-800">Settings</a>
          <a href="/" class="text-sm text-gray-600 hover:text-gray-800">Home</a>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto px-4 py-8">
      <% if (items.length === 0) { %>
        <div class="bg-white rounded-lg shadow p-6 text-center">
          <p class="text-gray-500">No items need review. Great job!</p>
        </div>
      <% } else { %>
        <div class="space-y-4">
          <% items.forEach(item => { %>
            <div class="bg-white rounded-lg shadow p-6" data-item-id="<%= item.id %>">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <!-- Header -->
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="font-semibold text-lg text-gray-900"><%= item.subject || '(No subject)' %></h3>
                    <span class="px-2 py-1 text-xs rounded bg-yellow-100 text-yellow-800">
                      <%= Math.round(item.confidence * 100) %>% confident
                    </span>
                    <span class="px-2 py-1 text-xs rounded <%= item.detected_type === 'appointment' ? 'bg-blue-100 text-blue-800' : item.detected_type === 'bill' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= item.detected_type %>
                    </span>
                  </div>

                  <!-- Metadata -->
                  <div class="text-sm text-gray-600 mb-3">
                    <p><span class="font-medium">From:</span> <%= item.sender %></p>
                    <p><span class="font-medium">Received:</span> <%= new Date(item.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' }) %></p>
                  </div>

                  <!-- Excerpt -->
                  <details class="text-sm text-gray-700">
                    <summary class="cursor-pointer font-medium text-blue-600 hover:text-blue-800">Show excerpt</summary>
                    <div class="mt-2 p-3 bg-gray-50 rounded border border-gray-200 whitespace-pre-wrap">
<%= item.short_excerpt %>
                    </div>
                  </details>
                </div>

                <!-- Action Buttons -->
                <div class="ml-6 flex flex-col gap-2">
                  <button
                    onclick="reclassify(<%= item.id %>, 'appointment')"
                    class="px-4 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition"
                  >
                    Mark as Appointment
                  </button>
                  <button
                    onclick="reclassify(<%= item.id %>, 'bill')"
                    class="px-4 py-2 bg-green-600 text-white text-sm rounded hover:bg-green-700 transition"
                  >
                    Mark as Bill
                  </button>
                  <button
                    onclick="reclassify(<%= item.id %>, 'noise')"
                    class="px-4 py-2 bg-gray-500 text-white text-sm rounded hover:bg-gray-600 transition"
                  >
                    Mark as Noise
                  </button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    async function reclassify(itemId, newType) {
      try {
        const response = await fetch(`/review/${itemId}/reclassify`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ newType })
        });

        if (response.ok) {
          // Remove item from list
          const itemCard = document.querySelector(`[data-item-id="${itemId}"]`);
          if (itemCard) {
            itemCard.style.opacity = '0';
            itemCard.style.transition = 'opacity 0.3s';
            setTimeout(() => {
              itemCard.remove();

              // Update count
              const remaining = document.querySelectorAll('[data-item-id]').length;
              if (remaining === 0) {
                location.reload();
              }
            }, 300);
          }
        } else {
          alert('Error reclassifying item');
        }
      } catch (error) {
        console.error('Reclassify error:', error);
        alert('Error reclassifying item');
      }
    }
  </script>
</body>
</html>
