EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Expo app calls
# For local dev, point to the Fastify API started via `pnpm api:dev`
# iOS simulator: http://localhost:8080
# Android emulator: http://10.0.2.2:8080
# Physical device: http://<your-LAN-ip>:8080
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080
# Optional production override (used when NODE_ENV=production)
EXPO_PUBLIC_API_BASE_URL_PROD=https://api.example.com
EXPO_PUBLIC_GOOGLE_REDIRECT_URI=https://your-ngrok-host/auth/google/callback
EXPO_PUBLIC_GOOGLE_REDIRECT_URI_PROD=https://your-prod-host/auth/google/callback
GOOGLE_WEBHOOK_URL=https://your-ngrok-host/webhooks/google/push
GOOGLE_WEBHOOK_URL_PROD=https://your-prod-host/webhooks/google/push
EXPO_PUBLIC_POSTHOG_KEY=phc_your_key_here
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# API server
API_HOST=0.0.0.0
API_PORT=8080
DATABASE_URL=postgres://user:password@localhost:5432/carebase
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute
POSTHOG_API_KEY=ph_apikey_here
POSTHOG_HOST=https://us.i.posthog.com
GOOGLE_PUBSUB_VERIFICATION_TOKEN=your_push_token
GOOGLE_PUBSUB_TOPIC_DEV=carebase-sync-dev
GOOGLE_PUBSUB_TOPIC_PROD=carebase-sync
DEBUG_PUSH_LOGS=false

# Google ingestion (backend)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
