# Carebase backend - production validation (carebase.dev)
# Copy this to .env.production.local when testing against production services
CAREBASE_ENV=production
NODE_ENV=production

# Backend URLs
BASE_URL=https://carebase.dev
COLLABORATOR_INVITE_BASE_URL=https://carebase.dev
COLLABORATOR_APP_OPEN_URL=exp://carebase-prod-tunnel/invite?token={token}
COLLABORATOR_APP_DOWNLOAD_URL=https://carebase.dev/app

# Database (Railway connection string or prod replica)
DATABASE_URL=postgres://username:password@db-host:5432/carebase
DATABASE_SSL=require
# Paste the base64 output from Railway's CA bundle (or leave blank to disable verification)
DATABASE_SSL_CA_BASE64=
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Google OAuth (prod credentials)
GOOGLE_CLIENT_ID=your-prod-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-prod-google-client-secret
GOOGLE_AUTH_STATE_SECRET=super-secret-for-prod-state
GOOGLE_CREDENTIALS_ENCRYPTION_KEY=base64-encoded-32-byte-key
GOOGLE_SYNC_DEFAULT_TIME_ZONE=UTC

# Google Cloud Vision OCR
# Store the service account JSON as a base64 string to avoid multi-line secrets issues.
OCR_SERVICE_ACCOUNT_JSON=

# Clerk (Authentication)
CLERK_SECRET_KEY=your-prod-clerk-secret-key
CLERK_PUBLISHABLE_KEY=your-prod-clerk-publishable-key
CLERK_WEBHOOK_SECRET=whsec_prod
CLERK_JWT_TEMPLATE_NAME=carebase-backend
CLERK_SIGN_IN_URL=https://your-prod-clerk-domain/sign-in
CLERK_SIGN_UP_URL=https://your-prod-clerk-domain/sign-up

# Email provider
RESEND_API_KEY=your-prod-resend-api-key

# Misc
