# Carebase backend - production validation (carebase.dev)
# Copy this to .env.production.local when testing against production services
CAREBASE_ENV=production
NODE_ENV=production

# Backend URLs
BASE_URL=https://carebase.dev
COLLABORATOR_INVITE_BASE_URL=https://carebase.dev
COLLABORATOR_APP_OPEN_URL=exp://carebase-prod-tunnel/invite?token={token}
COLLABORATOR_APP_DOWNLOAD_URL=https://carebase.dev/app

# Database (Railway connection string or prod replica)
DATABASE_URL=postgres://username:password@db-host:5432/carebase

# Google OAuth (prod credentials)
GOOGLE_CLIENT_ID=your-prod-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-prod-google-client-secret
GOOGLE_CALLBACK_URL=https://carebase.dev/auth/google/callback
GOOGLE_AUTH_STATE_SECRET=super-secret-for-prod-state

# Email provider
RESEND_API_KEY=your-prod-resend-api-key

# Misc
SESSION_SECRET=prod-session-secret
