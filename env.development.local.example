# Carebase backend - local development (ngrok)
# Copy this file to .env.development.local and fill in the placeholders
CAREBASE_ENV=development
NODE_ENV=development

# Backend URLs
BASE_URL=https://your-ngrok-id.ngrok.app
COLLABORATOR_INVITE_BASE_URL=https://your-ngrok-id.ngrok.app
COLLABORATOR_APP_OPEN_URL=exp://your-expo-tunnel/invite?token={token}
COLLABORATOR_APP_DOWNLOAD_URL=https://expo.dev/@your-account/carebase

# Database
DATABASE_URL=postgres://username:password@localhost:5432/carebase
# Optional TLS if your local Postgres requires it
# DATABASE_SSL=require
# DATABASE_SSL_CA_BASE64=
# DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Google OAuth (dev credentials)
GOOGLE_CLIENT_ID=your-dev-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
GOOGLE_AUTH_STATE_SECRET=super-secret-for-dev-state
GOOGLE_CREDENTIALS_ENCRYPTION_KEY=base64-encoded-32-byte-key
GOOGLE_SYNC_DEFAULT_TIME_ZONE=UTC

# Google Cloud Vision OCR (optional)
# Provide the full JSON or a base64-encoded JSON string for the service account.
# Example: OCR_SERVICE_ACCOUNT_JSON="$(cat care-base-mvp-904ca8fd56c7.json | base64)"
OCR_SERVICE_ACCOUNT_JSON=

# Clerk (Authentication)
CLERK_SECRET_KEY=your-dev-clerk-secret-key
CLERK_PUBLISHABLE_KEY=your-dev-clerk-publishable-key
# Optional: name of the JWT template configured in Clerk for backend verification
CLERK_JWT_TEMPLATE_NAME=carebase-backend
# Optional: override hosted UI URLs if different per environment
CLERK_SIGN_IN_URL=https://your-dev-clerk-domain/sign-in
CLERK_SIGN_UP_URL=https://your-dev-clerk-domain/sign-up

# Resend or other email providers
RESEND_API_KEY=your-resend-api-key
POSTMARK_INBOUND_SECRET=postmark-dev-secret
RESEND_INBOUND_SECRET=resend-dev-secret

# Misc
SESSION_SECRET=dev-session-secret
