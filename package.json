{
  "name": "carebase-monorepo",
  "version": "0.1.0",
  "description": "Healthcare coordination platform - monorepo with backend API and React Native mobile app",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "mobile",
    "shared",
    "tests"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:mobile": "npm run dev --workspace=mobile",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend",
    "test:contracts": "npm run test --workspace=@carebase/contracts",
    "coverage": "npm run test:coverage --workspace=backend && npm run test:coverage --workspace=mobile",
    "db:migrate": "npm run db:migrate --workspace=backend"
  },
  "keywords": [
    "healthcare",
    "coordination",
    "react-native",
    "monorepo"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
