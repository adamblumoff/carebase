{
  "name": "carebase-monorepo",
  "version": "0.1.0",
  "description": "Healthcare coordination platform - monorepo with backend API and React Native mobile app",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "mobile",
    "shared",
    "tests"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "dev:backend": "node scripts/run-backend.js development",
    "dev:backend:prod": "node scripts/run-backend.js production",
    "dev:mobile": "npm run dev --workspace=mobile",
    "env:mobile:prod": "node scripts/swap-mobile-env.js prod",
    "env:mobile:dev": "node scripts/swap-mobile-env.js dev",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend",
    "test:contracts": "npm run test --workspace=tests",
    "coverage": "npm run test:coverage --workspace=backend && npm run test:coverage --workspace=tests && npm run test:coverage --workspace=shared && npm run test:coverage --workspace=mobile",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "lint:deps": "dependency-cruiser --config dependency-cruiser.config.cjs backend/src",
    "configure:clerk-template": "tsx scripts/configure-clerk-template.ts",
    "num_lines": "npx cloc ~/carebase --exclude-dir=node_modules,android,ios  --exclude-lang=JSON,Markdown"
  },
  "keywords": [
    "healthcare",
    "coordination",
    "react-native",
    "monorepo"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dependency-cruiser": "^17.1.0"
  },
  "engines": {
    "node": ">=20.19.4"
  }
}
